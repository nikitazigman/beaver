#settings_screen_container {
    align: center middle;
    max-width: 70%;
    height: auto;
    max-height: 80%;
    background: $panel;
}

#settings_screen_title {
    text-align: center;
    color: $accent;
    text-style: bold;
    align: center middle;
    padding-bottom: 2;
    padding-top: 1;

}

#settings_screen_language {
    padding: 1;
    border: solid $accent;
    height: auto;
}

#settings_screen_tags {
    padding: 1;
    border: solid $accent;
    height: auto;
}
